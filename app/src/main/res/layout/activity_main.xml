<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <TextView
                android:text="@string/Calculadora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/Calculadora"
                android:layout_marginEnd="250dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="169dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="57dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="831dp"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.295"
                android:textSize="60sp" android:textColor="#9C27B0"/>
        <TextView
                android:text="Rsultado do calculo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/ResultadoDoCalculo"
                tools:layout_editor_absoluteY="67dp"
                tools:layout_editor_absoluteX="33dp" android:textSize="34sp"/>
        <TextView
                android:text="Classificação"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/Classificação"
                tools:layout_editor_absoluteY="168dp"
                tools:layout_editor_absoluteX="80dp" android:textSize="34sp"/>
        <TextView
                android:text="Altura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/Altura" tools:layout_editor_absoluteY="241dp"
                tools:layout_editor_absoluteX="155dp" android:textSize="34sp"/>
        <TextView
                android:text="Peso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/Peso" tools:layout_editor_absoluteY="519dp"
                tools:layout_editor_absoluteX="169dp" android:textSize="34sp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                tools:layout_editor_absoluteY="341dp"
                tools:layout_editor_absoluteX="73dp" android:textSize="20sp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editTextNumberDecimal2" tools:layout_editor_absoluteY="599dp"
                tools:layout_editor_absoluteX="160dp"/>
        <RadioButton
                android:text="RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton" tools:layout_editor_absoluteY="762dp"
                tools:layout_editor_absoluteX="241dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
